<Window x:Class="AplikacjaGeometria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AplikacjaGeometria"
        Title="Aplikacja Geometria" Height="450" Width="800" Foreground="White" Background="#FF4C4C4C" FontWeight="Bold">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Figury">
                <MenuItem Header="Koło" Click="PokazWidokKolo"/>
                <MenuItem Header="Prostokąt" Click="PokazWidokProstokat"/>
                <MenuItem Header="Trójkąt" Click="PokazWidokTrojkat"/>
            </MenuItem>
            <MenuItem Header="Motyw">
                <MenuItem Header="Jasny" Click="ZmienMotyw"/>
                <MenuItem Header="Ciemny" Click="ZmienMotyw"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="ObszarZawartosci" Margin="10,30,10,10" Background="#FF676767"/>
    </Grid>
</Window>
