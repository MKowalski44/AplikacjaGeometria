<UserControl x:Class="AplikacjaGeometria.Widoki.WidokProstokat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <!-- Etykieta dla szerokosci prostokata -->
            <Label Content="Szerokosc:"/>
            <!-- Pole tekstowe do wprowadzenia szerokosci -->
            <TextBox x:Name="SzerokoscInput"/>
            <!-- Etykieta dla wysokosci prostokata -->
            <Label Content="Wysokosc:"/>
            <!-- Pole tekstowe do wprowadzenia wysokosci -->
            <TextBox x:Name="WysokoscInput"/>
            <!-- Przycisk do obliczenia -->
            <Button Content="Oblicz" Click="Oblicz_Click"/>
            <!-- Etykieta do wyswietlenia wyniku -->
            <Label x:Name="WynikLabel"/>
        </StackPanel>
    </Grid>
</UserControl>